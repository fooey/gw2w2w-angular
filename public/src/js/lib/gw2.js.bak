(function setMapObjectives(objectiveGroups, mapObjectives){
	angular.forEach(
		objectiveGroups,
		function(group){

			var mapName = group.mapType;

			angular.forEach(group.sections, function(section){
				
				var sectionName = section.label;

				angular.forEach(section.objectives, function(objectiveId){

					mapObjectives[objectiveId] = {
						mapName: mapName,
						sectionName: sectionName,
					};		

				});			

			});
		}
	);
})(window.gw2.wvw.objectiveGroups, window.gw2.wvw.mapObjectives);




